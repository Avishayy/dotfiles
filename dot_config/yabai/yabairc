# script injection, make sure we allow yabai to run it through sudoers
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

sudo yabai --load-sa

# display configuration: run display-update script on display events
yabai -m signal --add event=display_added action="$HOME/.config/yabai/display-update.sh"
yabai -m signal --add event=display_removed action="$HOME/.config/yabai/display-update.sh"

# window opacity based on active display
yabai -m signal --add event=display_changed action="$HOME/.config/yabai/window-display-opacity.sh"
yabai -m signal --add event=space_changed action="$HOME/.config/yabai/window-display-opacity.sh"
yabai -m signal --add event=window_focused action="$HOME/.config/yabai/window-display-opacity.sh"


# default layour (bsp)
yabai -m config layout bsp
# new window spawns on the right for vertical, bottom for horizontal
yabai -m config window_placement second_child

# padding set to 12px
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

# when window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap

# performance: disable animations for faster window focus
yabai -m config window_animation_duration 0.0

# focus and mouse behavior
yabai -m config focus_follows_mouse autoraise
yabai -m config mouse_follows_focus off

# window opacity for better visual feedback
yabai -m config window_opacity on
yabai -m config window_opacity_duration 0.0
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.9

# create and organize spaces on startup
$HOME/.config/yabai/display-update.sh

# set initial window opacity
$HOME/.config/yabai/window-display-opacity.sh
