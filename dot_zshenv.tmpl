# .zshenv - Loaded for ALL zsh invocations (interactive and non-interactive)
# Keep this minimal and fast! Only environment variables needed everywhere.

# Deduplicate the PATH variable, useful when nesting shells
typeset -U path

# Essential PATH additions
path+=($HOME/.local/bin)
path+=($HOME/scripts)

# Environment variables (not initialization!)
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && path+=($PYENV_ROOT/bin)

export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"

export PNPM_HOME=$HOME/.local/share/pnpm
path+=($PNPM_HOME)

# Editor configuration
export EDITOR=nvim
export MANPAGER='nvim +Man!'
